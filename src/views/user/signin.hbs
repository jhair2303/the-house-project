<div class="container p-4">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center ">
        <div class="card-header">
          <h4>
            Inicio de Sesión 
          </h4>
        </div>
        <div class="card-body">
          <img
            src="/img/letra-h.png"
            alt="alternative"
            class="card-img-top mx-auto rounded-circle w-50 mb-3"
          />
          <form action="/users/signin" method="post">
            <div class="form-group mb-3 d-flex align-items-center">
              <i class="fa-solid fa-user me-2"></i><input
                type="text"
                name="email"
                placeholder="Usuario"
                class="form-control"
                value="{{email}}"
              />
            </div>
            <div class="form-group mb-3 d-flex align-items-center">
              <i class="fa-solid fa-lock me-2"></i> <input
                type="password"
                name="password"
                placeholder="Contraseña"
                class="form-control"
              />
            </div>
            <div class="form-group mb-3">
              <button class="btn btn-success btn-block">Iniciar Sesión</button>
            </div>
            <div class="form-group">
              <a href="/users/reseat-password" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>