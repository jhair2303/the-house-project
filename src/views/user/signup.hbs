<div class="mt-3">
  <div class="row">
    <div class="col-md-4 mx-auto">
      <div class="card text-center">
        <div class="card-header">
          <h4>
            Registro
          </h4>
        </div>
        <div class="card-body">
          <form action="/users/signup" method="post">
           <div class="form-group mb-3">
              <img src="" alt="" hidden name="image">
            </div>
            <div class="form-group mb-3">
              <input
                type="text"
                name="name"
                placeholder="Nombre"
                class="form-control"
                value="{{name}}"
              />
            </div>
            <div class="form-group mb-3">
              <input
                type="email"
                name="email"
                placeholder="Correo"
                class="form-control",
                value="{{email}}"
              />
            </div>
            <div class="form-group mb-3">
              <input
                type="password"
                name="password"
                placeholder="Contraseña"
                class="form-control"
                value="{{password}}"
              />
            </div>
            <div class="form-group mb-3">
              <input
                type="password"
                name="confirm_password"
                placeholder="Confirmar Contraseña"
                class="form-control"
                value="{{confirm_password}}"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-success btn-block">Registrarme</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>